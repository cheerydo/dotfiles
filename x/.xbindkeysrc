# Examples of commands:

"amixer -c 0 set Master 5+ && notify-send `amixer get Master -M | grep -oE "[[:digit:]]*%"`"
  XF86AudioRaiseVolume

"amixer -c 0 set Master 5- && notify-send `amixer get Master -M | grep -oE "[[:digit:]]*%"`"
  XF86AudioLowerVolume

"amixer set Master toggle && notify-send -u urgent Muted"
  XF86AudioMute

"thunar"
  XF86HomePage

"claws-mail"
  XF86Mail

"galculator"
  XF86Calculator

"systemctl suspend"
  XF86Sleep

"scrot -m -e 'mv $f ~/screens/'"
  Print

"ncmpcpp toggle"
  Control + Shift + p

"ncmpcpp next"
  Control + End

"ncmpcpp prev"
  Control + Home
 
