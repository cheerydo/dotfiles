" vim: set ft=vim:
set runtimepath=$HOME/.config/vimperator
colorscheme jah

" Saner navigation (for me anyway!)
nnoremap  h gT
nnoremap  j 5j
nnoremap  k 5k
nnoremap  l gt
nnoremap  d <c-d>
nnoremap  u <c-u>
nnoremap  x :bd<cr>
nnoremap  X :undo<cr>
nnoremap  J <c-n>
nnoremap  K <c-p>
nnoremap  <a-j> <c-n>
nnoremap  <a-k> <c-p>
nnoremap  <a-l> :tabmove! +1<cr>
nnoremap  <a-h> :tabmove! -1<cr>

set focuscontent
set defsearch=google
set gui=tabs,bookmarks,nonavigation
set hlsearch
set hintchars=fdsartgbvecwxqyiopmnhzuljk
set maxitems=10
set noscrollbars
set status+=ssl
set complete=slh
set wildmode=list:full

" Baby says I gotsta have muh privacy
set! browser.pocket.enabled=false
set! browser.readinglist.enabled=false
set! browser.readinglist.sidebarEverOpened=false
set! browser.safebrowsing.downloads.enabled=false
set! browser.safebrowsing.malware.enabled=false
set! browser.safebrowsing.enabled=false
set! browser.search.suggest.enabled=false
set! browser.selfsupport.url=""
set! browser.tabs.drawInTitlebar=true
set! datareporting.healthreport.service.enabled=false
set! datareporting.healthreport.uploadEnabled=false
set! intl.charset.fallback.override=unicode
set! extensions.checkCompatibility=false
set! geo.enabled=false
set! network.cookie.cookieBehavior=1
set! network.http.sendRefererHeader=2
set! network.prefetch-next=false
set! plugins.click_to_play=true
set! privacy.trackingprotection.enabled=true
set! reader.parse-on-load.enabled=false
set! toolkit.telemetry.enabled=false

"" Disable WebRTC, Firefox Hello, and EME
set! media.peerconnection.enabled=false
set! media.peerconnection.turn.disable=true
set! media.peerconnection.use_document_iceservers=false
set! media.peerconnection.video.enabled=true
set! media.peerconnection.identity.timeout=0
set! loop.enabled=false

" Force safe ssl and disable broken DH primes
set! security.ssl.treat_unsafe_negotiation_as_broken=true
set! security.ssl.require_safe_negotiation=false
set! security.ssl3.dhe_rsa_aes_128_sha=false
set! security.ssl3.dhe_rsa_aes_256_sha=false

" Disable all autoplay. Please
set! media.autoplay.enabled=true
set! media.eme.enabled=false
set! media.gmp-eme-adobe.enabled=false
set! media.gstreamer.enabled=false
set! media.webm.enabled=true
set! media.opus.enabled=false
set! media.wave.enabled=false
set! media.ogg.enabled=false

" Graphics settings
"set! layers.acceleration.force-enabled=true
"set! layers.offmainthreadcomposition.enabled=true

" Key maps
nmap <c-b> :ignorekeys<cr> :sbar<Space>Bookmarks<cr>

" Ublock origin fix
style -name ublock * #nav-bar * { visibility: visible; }

" fix for gtk woes
set! gfx.font_rendering.fontconfig.fontlist.enabled=false
