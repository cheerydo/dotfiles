" vim: set ft=vim:
set runtimepath=$HOME/.config/vimperator
colorscheme jah

" Saner navigation (for me anyway!)
nnoremap  h 5h
nnoremap  j 5j
nnoremap  k 5k
nnoremap  l 5l
nnoremap  d <c-d>
nnoremap  u <c-u>
nnoremap  x :bd<cr>
nnoremap  X :undo<cr>
map       J <c-p>
map       K <c-n>
map       <a-s-j> :tabmove! -1<cr>
map       <a-s-k> :tabmove! +1<cr>

set gui=tabs,navigation
set hlsearch
set hintchars=fdsartgbvecwxqyiopmnhzuljk
set focuscontent=true
set maxitems=10
set noscrollbars
set status+=ssl
set wildmode=list:longest,full

" Maps
nmap <c-b> :sbar<Space>Bookmarks<cr>

" Firefox about:config
