"3.9 (created: 2015/02/15 15:49:05)

set runtimepath=$HOME/.config/vimperator
colorscheme jah

" Faster navigation
nnoremap h 5h
nnoremap j 5j
nnoremap k 5k
nnoremap l 5l

" I hate the Ctrl key sometimes
nnoremap d <c-d>
nnoremap u <c-u>

" Make it behave like dwb (sad cry)
nnoremap x :bd<cr>
nnoremap X :undo<cr>
map J <c-p>
map K <c-n>
map <a-s-j> :tabmove! -1<cr>
map <a-s-k> :tabmove! +1<cr>

set hintchars=asdfjkl;ghruie

" Gud looks bae
set gui=tabs,navigation

" Toggle dat bar
nmap <c-b> :sbar<Space>Bookmarks<cr>

" vim: set ft=vimperator:
