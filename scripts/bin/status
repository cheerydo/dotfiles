#!/bin/sh

f0='[30m'; f1='[31m'; f2='[32m'; f3='[33m'; f4='[34m'; f5='[35m'; f6='[36m'; f7='[37m'
b0='[40m'; b1='[41m'; b2='[42m'; b4='[44m'; b4='[44m'; b5='[45m'; b6='[46m'; b7='[47m'

B='[1m'
R='[0m'
I='[7m'
P="$(pacman -Qq | wc -l)"
K="$(uname -rmo)"
U="$USER"
H="$(hostname)"
S="$SHELL"
T="$(uptime -p | sed s:"up "::)"

cat << EOF
$I$f0â–’ $U@$H$R$f0î‚°
$I$f2â–’ $P Packages$R$f2î‚°
$I$f3â–’ $K$R$f3î‚°
$I$f4â–’ $T$R$f4î‚°
$I$f5â–’ $S$R$f5î‚°
EOF

